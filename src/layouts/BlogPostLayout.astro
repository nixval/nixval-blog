---
import type { CollectionEntry } from 'astro:content';
import type { MarkdownHeading } from 'astro';
import { Image } from 'astro:assets';
import BaseLayout from './BaseLayout.astro';
import { formatDate, getReadingTime } from '../utils';
import CopyCodeButton from '../components/Blog/CopyCodeButton.astro';
import TableOfContents from '../components/Blog/TableOfContents.astro';
import ShareButtons from '../components/Blog/ShareButtons.astro';
import RelatedPosts from '../components/Blog/RelatedPosts.astro';
import Breadcrumbs from '../components/Common/Breadcrumbs.astro';
import ImageZoom from '../components/Blog/ImageZoom.astro';
import ReadingProgress from '../components/Blog/ReadingProgress.astro';
import SeriesWidget from '../components/Blog/SeriesWidget.astro';
import Schema from '../components/Common/Schema.astro';


interface Props {
  title: string;
  description: string;
  pubDate?: Date | string; 
  updatedDate?: Date | string;
  heroImage?: any; // Can be string or ImageMetadata
  headings?: MarkdownHeading[];
  readTimeContent?: string;
  tags?: string[];
  prevPost?: CollectionEntry<'blog'> | null;
  nextPost?: CollectionEntry<'blog'> | null;
  relatedPosts?: CollectionEntry<'blog'>[];
  id?: string;
  seriesName?: string;
  seriesPosts?: CollectionEntry<'blog'>[];
  currentPost?: CollectionEntry<'blog'>;
}

const { 
  title, 
  description, 
  pubDate, 
  heroImage, 
  headings = [], 
  readTimeContent = '',
  tags = [],
  prevPost,
  nextPost,
  relatedPosts = [],
  id = '',
  seriesName,
  seriesPosts = [],
  currentPost
} = Astro.props;

// Date logic
let pubDateObj: Date | null = null;
try {
  if (pubDate) pubDateObj = new Date(pubDate);
} catch (e) {}
const readTime = getReadingTime(readTimeContent);

// Generate OG Image URL
const ogImage = new URL(`/blog/${id}/og.png`, Astro.site);
---

<BaseLayout title={title} description={description} image={ogImage.toString()}>
  {currentPost && <Schema post={currentPost} />}
  <ReadingProgress /> 
  <div class="mx-auto grid max-w-6xl grid-cols-1 gap-8 lg:grid-cols-[minmax(0,1fr)_280px]">
    
    <article class="min-w-0 rounded-3xl border border-base-content/10 bg-base-100/75 p-5 shadow-xl shadow-base-content/5 backdrop-blur-sm md:p-8">
      
      <Breadcrumbs />

      {/* HERO IMAGE LOGIC 
          We use aspect-video to maintain a consistent 16:9 ratio.
          The 'w-full object-cover' ensures the image fills the container nicely.
      */}
      {heroImage && (
        <div class="relative mb-8 aspect-video overflow-hidden rounded-2xl bg-base-200 shadow-xl">
          {typeof heroImage === 'object' ? (
            <Image 
              src={heroImage} 
              alt={title} 
              width={1024} 
              height={576}
              class="object-cover w-full h-full"
              priority={true} 
            />
          ) : (
            <img 
              src={heroImage} 
              alt={title} 
              class="object-cover w-full h-full"
            />
          )}
        </div>
      )}

      <header class="mb-10 text-center md:text-left">
        <h1 
          class="mb-4 text-4xl font-black leading-tight tracking-tight md:text-5xl" 
          transition:name={`title-${id}`}
        >
          {title}
        </h1>
        
        <div class="flex flex-wrap items-center justify-center md:justify-start gap-4 text-sm text-base-content/60 mb-4">
          {pubDateObj && (
             <div class="flex items-center gap-1">
               <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
               <time datetime={pubDateObj.toISOString()}>{formatDate(pubDateObj)}</time>
             </div>
          )}
          
          <div class="flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            <span>{readTime}</span>
          </div>
        </div>

        {/* Mobile Tags */}
        {tags.length > 0 && (
          <div class="mb-6 flex flex-wrap justify-center gap-2 md:justify-start lg:hidden">
            {tags.map((tag) => (
              <a href={`/tags/${tag}`} class="badge badge-outline border-base-content/20 bg-base-100/80 hover:badge-primary">#{tag}</a>
            ))}
          </div>
        )}
        
        <hr class="mt-6 border-base-content/10" />
      </header>

{seriesName && currentPost && seriesPosts.length > 0 && (
    <SeriesWidget 
      seriesName={seriesName} 
      seriesPosts={seriesPosts} 
      currentPost={currentPost} 
    />
  )}

      <div class="prose prose-lg max-w-none prose-headings:font-bold prose-a:text-primary">
        <slot />
      </div>

      <CopyCodeButton /> 
      
      <div class="mt-8 lg:hidden">
        <ShareButtons title={title} description={description} />
      </div>

      <hr class="my-8 border-base-content/10" />

      {/* Navigation Links */}
      <nav class="mb-12 grid grid-cols-1 gap-4 md:grid-cols-2">
        {prevPost ? (
          <a href={`/blog/${prevPost.id}/`} class="group flex flex-col rounded-2xl border border-base-content/10 bg-base-100/70 p-5 text-right transition-all hover:-translate-y-0.5 hover:border-primary/35 hover:bg-base-200/60 md:text-left">
            <span class="mb-1 text-xs font-bold uppercase tracking-wider text-base-content/50">« Previous Article</span>
            <span class="line-clamp-2 text-lg font-bold transition-colors group-hover:text-primary">{prevPost.data.title}</span>
          </a>
        ) : (
          <div class="hidden md:block"></div>
        )}

        {nextPost ? (
          <a href={`/blog/${nextPost.id}/`} class="group flex flex-col rounded-2xl border border-base-content/10 bg-base-100/70 p-5 text-right transition-all hover:-translate-y-0.5 hover:border-primary/35 hover:bg-base-200/60">
            <span class="mb-1 text-xs font-bold uppercase tracking-wider text-base-content/50">Next Article »</span>
            <span class="line-clamp-2 text-lg font-bold transition-colors group-hover:text-primary">{nextPost.data.title}</span>
          </a>
        ) : (
          <div></div>
        )}
      </nav>

      <RelatedPosts posts={relatedPosts} />

      <div class="mt-12 rounded-2xl border border-base-content/10 bg-base-100/65 p-6">
        <h3 class="mb-4 border-b border-base-content/10 pb-2 text-lg font-bold">Discussion</h3>
        <slot name="comments" />
      </div>

    </article>

    <aside class="relative hidden lg:block">
      <div class="sticky top-24 space-y-6">
        <TableOfContents headings={headings} />
        
        <div class="rounded-2xl border border-base-content/10 bg-base-100/70 p-4">
          <ShareButtons title={title} description={description} />
        </div>

        {tags.length > 0 && (
          <div class="rounded-2xl border border-base-content/10 bg-base-100/70 p-4">
             <h3 class="mb-3 text-xs font-bold uppercase tracking-wider text-base-content/50">Topics</h3>
             <div class="flex flex-wrap gap-2">
               {tags.map((tag) => (
                 <a 
                   href={`/tags/${tag}`} 
                   class="badge badge-outline border-base-content/20 bg-base-100/85 transition-colors hover:badge-primary"
                 >
                   #{tag}
                 </a>
               ))}
             </div>
          </div>
        )}
      </div>
    </aside>
  
  </div>
  <ImageZoom />
</BaseLayout>
