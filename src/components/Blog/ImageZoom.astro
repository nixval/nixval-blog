// No props needed, just client-side logic
---

<script>
  import mediumZoom from 'medium-zoom';

  function initZoom() {
    mediumZoom('.prose img', {
      margin: 24,
      background: 'rgba(0, 0, 0, 0.9)', // Dark overlay
      scrollOffset: 0,
    });
  }

  initZoom();
  if (!document.documentElement.dataset.imageZoomBound) {
    document.addEventListener('astro:page-load', initZoom);
    document.documentElement.dataset.imageZoomBound = 'true';
  }
</script>
