---
import type { CollectionEntry } from 'astro:content';
import PostItem from './PostItem.astro'; // Reuse your existing card!

interface Props {
  posts: CollectionEntry<'blog'>[];
}

const { posts } = Astro.props;
---

{posts.length > 0 && (
  <section class="mt-12 bg-base-200/30 p-6 rounded-2xl border border-base-content/5">
    <div class="flex items-center gap-2 mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
      <h2 class="text-2xl font-bold">You might also like</h2>
    </div>
    
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {posts.map((post) => (
        /* We wrap the PostItem to force a smaller layout or just render it directly. 
           Since PostItem is responsive, it should adapt well to the grid. 
        */
        <div class="min-w-0">
          <PostItem post={post} />
        </div>
      ))}
    </div>
  </section>
)}
