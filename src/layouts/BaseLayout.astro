---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
import Head from '../components/Common/Head.astro';
import Header from '../components/Common/Header.astro';
import Footer from '../components/Common/Footer.astro';
import ScrollToTop from '../components/Common/ScrollToTop.astro';

interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head title={title} description={description} image={image} />
  
  <ClientRouter />

  <body class="flex flex-col min-h-screen antialiased overflow-x-hidden">
    <Header />
    
    <main class="flex-grow container mx-auto px-4 py-8">
      <div transition:animate="fade">
        <slot />
      </div>
    </main>
    
    <Footer />
    <ScrollToTop />

    <script is:inline>
      // 1. Log Lifecycle Events
      document.addEventListener('astro:before-preparation', () => {
        console.log('ðŸš€ [Router] Navigating...');
        // Show loading bar
        document.documentElement.classList.add('is-loading');
      });

      document.addEventListener('astro:after-swap', () => {
        console.log('ðŸ”„ [Router] Content Swapped (Theme should be restored now)');
      });

      document.addEventListener('astro:page-load', () => {
        console.log('âœ… [Router] Page Loaded (Scripts Initialized)');
        // Hide loading bar
        document.documentElement.classList.remove('is-loading');
      });
    </script>
    
    <style is:global>
      /* Loading Bar */
      html::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 0%;
        height: 3px;
        background-color: oklch(var(--p)); /* Primary Color */
        z-index: 9999;
        transition: width 0.2s ease, opacity 0.2s ease;
        opacity: 0;
      }
      
      html.is-loading::before {
        width: 70%; /* Fake progress */
        opacity: 1;
      }
    </style>
  </body>
</html>
