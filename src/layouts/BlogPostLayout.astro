---
import type { CollectionEntry, MarkdownHeading } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from './BaseLayout.astro';
import { formatDate, getReadingTime } from '../utils';
import CopyCodeButton from '../components/Blog/CopyCodeButton.astro';
import TableOfContents from '../components/Blog/TableOfContents.astro';
import ShareButtons from '../components/Blog/ShareButtons.astro';

interface Props {
  title: string;
  description: string;
  pubDate?: Date | string; 
  updatedDate?: Date | string;
  heroImage?: any;
  headings?: MarkdownHeading[];
  readTimeContent?: string;
  tags?: string[]; // <--- New Prop
}

const { 
  title, 
  description, 
  pubDate, 
  updatedDate, 
  heroImage, 
  headings = [], 
  readTimeContent = '',
  tags = [] // <--- Default to empty array
} = Astro.props;

// Date logic
let pubDateObj: Date | null = null;
let updatedDateObj: Date | null = null;
try {
  if (pubDate) pubDateObj = new Date(pubDate);
  if (updatedDate) updatedDateObj = new Date(updatedDate);
} catch (e) {}

const readTime = getReadingTime(readTimeContent);
---

<BaseLayout title={title} description={description}>
  
  <div class="grid grid-cols-1 lg:grid-cols-[1fr_250px] gap-8 max-w-6xl mx-auto">
    
    <article class="min-w-0">
      
      {/* ... Hero Image ... */}
      {heroImage && (
        <div class="mb-8 rounded-box overflow-hidden shadow-xl aspect-video relative">
          {typeof heroImage === 'object' ? (
            <Image src={heroImage} alt={title} class="object-cover w-full h-full" />
          ) : (
            <img src={heroImage} alt={title} class="object-cover w-full h-full" />
          )}
        </div>
      )}

      <header class="mb-10">
        <h1 class="text-4xl md:text-5xl font-extrabold mb-4 leading-tight">{title}</h1>
        
        <div class="flex flex-wrap items-center gap-4 text-sm text-base-content/60 mb-4">
          {pubDateObj && (
             /* ... Date Logic ... */
             <div class="flex items-center gap-1">
               <time datetime={pubDateObj.toISOString()}>{formatDate(pubDateObj)}</time>
             </div>
          )}
          
          <div class="flex items-center gap-1">
            <span>{readTime}</span>
          </div>
        </div>

        {/* MOBILE TAGS: Visible only on lg:hidden */}
        {tags.length > 0 && (
          <div class="lg:hidden flex gap-2 mb-6">
            {tags.map((tag) => (
              <a href={`/tags/${tag}`} class="badge badge-outline hover:badge-primary">#{tag}</a>
            ))}
          </div>
        )}
        
        <hr class="border-base-content/10 mt-6" />
      </header>

      <div class="prose prose-lg max-w-none prose-headings:font-bold prose-a:text-primary hover:prose-a:text-primary-focus">
        <slot />
      </div>

      <CopyCodeButton /> 
      
      <div class="lg:hidden mt-8">
        <ShareButtons title={title} description={description} />
      </div>

      <hr class="border-base-content/10 my-8" />
      <slot name="comments" /> 
    </article>

    <aside class="hidden lg:block relative">
      <div class="sticky top-24 space-y-8">
        
        <TableOfContents headings={headings} />
        
        <div class="pl-4 border-l border-base-content/10">
          <ShareButtons title={title} description={description} />
        </div>

        {/* DESKTOP TAGS: Rendered in Sidebar */}
        {tags.length > 0 && (
          <div class="pl-4 border-l border-base-content/10">
             <h3 class="text-xs font-bold uppercase tracking-wider text-base-content/50 mb-3">Topics</h3>
             <div class="flex flex-wrap gap-2">
               {tags.map((tag) => (
                 <a 
                   href={`/tags/${tag}`} 
                   class="badge badge-outline hover:badge-primary transition-colors cursor-pointer no-underline"
                 >
                   #{tag}
                 </a>
               ))}
             </div>
          </div>
        )}

      </div>
    </aside>

  </div>
</BaseLayout>
