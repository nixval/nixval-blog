---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE } from '../consts';
---

<BaseLayout title={`404 - Not Found | ${SITE_TITLE}`} description="Page not found">
  <div class="hero min-h-[60vh] bg-base-200 rounded-box mt-8">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-9xl font-bold text-primary">404</h1>
        <p class="py-6 text-2xl font-semibold">Oops! Page not found.</p>
        <p class="mb-8">The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
        <a href="/" class="btn btn-primary">Go Home</a>
      </div>
    </div>
  </div>
</BaseLayout>
