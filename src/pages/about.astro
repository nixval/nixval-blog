---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "About Me";
const description = "About the author of this blog";
const heroImage = "/placeholder-about.jpg"; 
---

<BaseLayout title={title} description={description} image={heroImage}>
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-6">About Me</h1>
    
    <div class="prose prose-lg">
      <p>
        Hello! I am a developer using the <strong>AstroDaisy</strong> template.
        I prefer using raw Astro components for pages like this to have full control over the layout.
      </p>

      <h3>My Tech Stack</h3>
      <ul>
        <li>Astro</li>
        <li>Tailwind CSS v4</li>
        <li>DaisyUI v5</li>
      </ul>
      
      <p>
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
      </p>
    </div>
  </div>
</BaseLayout>
