---
import type { CollectionEntry, MarkdownHeading } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from './BaseLayout.astro';
import { formatDate, getReadingTime } from '../utils';
import CopyCodeButton from '../components/Blog/CopyCodeButton.astro';
import TableOfContents from '../components/Blog/TableOfContents.astro';
import ShareButtons from '../components/Blog/ShareButtons.astro';
import RelatedPosts from '../components/Blog/RelatedPosts.astro'; // <--- Import
import Breadcrumbs from '../components/Common/Breadcrumbs.astro';
interface Props {
  title: string;
  description: string;
  pubDate?: Date | string; 
  updatedDate?: Date | string;
  heroImage?: any;
  headings?: MarkdownHeading[];
  readTimeContent?: string;
  tags?: string[];
  // New Props for Navigation & Relations
  prevPost?: CollectionEntry<'blog'> | null;
  nextPost?: CollectionEntry<'blog'> | null;
  relatedPosts?: CollectionEntry<'blog'>[];
  id?: string;
}

const {
  id,
  title, 
  description, 
  pubDate, 
  updatedDate, 
  heroImage, 
  headings = [], 
  readTimeContent = '',
  tags = [],
  prevPost,
  nextPost,
  relatedPosts = [],
} = Astro.props;

// ... (Date logic kept same) ...
let pubDateObj: Date | null = null;
let updatedDateObj: Date | null = null;
try {
  if (pubDate) pubDateObj = new Date(pubDate);
  if (updatedDate) updatedDateObj = new Date(updatedDate);
} catch (e) {}
const readTime = getReadingTime(readTimeContent);
const ogImage = new URL(`/blog/${id}/og.png`, Astro.site);
---

<BaseLayout title={title} description={description} image={ogImage.toString()}>
      <Breadcrumbs />
  <header class="mb-10 text-center">
    <h1 
      class="text-4xl md:text-5xl font-extrabold mb-4 leading-tight" 
      transition:name={`title-${id}`}
    >
      {title}
    </h1>
  </header>
  <div class="grid grid-cols-1 lg:grid-cols-[1fr_250px] gap-8 max-w-6xl mx-auto">

    <article class="min-w-0">

  


      <div class="prose prose-lg max-w-none prose-headings:font-bold prose-a:text-primary hover:prose-a:text-primary-focus">
        <slot />
      </div>

      <CopyCodeButton /> 

      <div class="lg:hidden mt-8">
        <ShareButtons title={title} description={description} />
      </div>

      <hr class="border-base-content/10 my-8" />

      {/* --- PREV / NEXT NAVIGATION --- */}
      <nav class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-12">
        {/* Previous (Older) Post */}
        {prevPost ? (
        <a href={`/blog/${prevPost.id}/`} class="group flex flex-col p-4 rounded-xl border border-base-content/10 hover:border-primary/50 hover:bg-base-200/50 transition-all text-right md:text-left">
          <span class="text-xs font-bold text-base-content/50 uppercase tracking-wider mb-1">« Previous Article</span>
          <span class="font-bold text-lg group-hover:text-primary transition-colors line-clamp-2">{prevPost.data.title}</span>
        </a>
        ) : (
        <div class="hidden md:block"></div> /* Spacer */
      )}

        {/* Next (Newer) Post */}
        {nextPost ? (
        <a href={`/blog/${nextPost.id}/`} class="group flex flex-col p-4 rounded-xl border border-base-content/10 hover:border-primary/50 hover:bg-base-200/50 transition-all text-right">
          <span class="text-xs font-bold text-base-content/50 uppercase tracking-wider mb-1">Next Article »</span>
          <span class="font-bold text-lg group-hover:text-primary transition-colors line-clamp-2">{nextPost.data.title}</span>
        </a>
        ) : (
        <div></div>
        )}
      </nav>

      {/* --- RELATED POSTS SECTION --- */}
      <RelatedPosts posts={relatedPosts} />

      {/* --- COMMENTS SECTION --- */}
      <div class="mt-12">
        <h3 class="text-lg font-bold mb-4 border-b border-base-content/10 pb-2">Discussion</h3>
        <slot name="comments" />
      </div>

    </article>

    <aside class="hidden lg:block relative">
      <div class="sticky top-24 space-y-8">
        <TableOfContents headings={headings} />

        <div class="pl-4 border-l border-base-content/10">
          <ShareButtons title={title} description={description} />
        </div>

        {tags.length > 0 && (
        <div class="pl-4 border-l border-base-content/10">
          <h3 class="text-xs font-bold uppercase tracking-wider text-base-content/50 mb-3">Topics</h3>
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
            <a 
              href={`/tags/${tag}`} 
              class="badge badge-outline hover:badge-primary transition-colors cursor-pointer no-underline"
            >
              #{tag}
            </a>
            ))}
          </div>
        </div>
        )}
      </div>
    </aside>

  </div>
</BaseLayout>
