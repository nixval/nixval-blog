---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const url = Astro.url.href;

// Encode for URL parameters
const text = encodeURIComponent(title);
const summary = encodeURIComponent(description);
const shareUrl = encodeURIComponent(url);
---

<div class="flex flex-col gap-2 mt-8 lg:mt-0">
  <h3 class="text-xs font-bold uppercase tracking-wider text-base-content/50 mb-2">Share</h3>
  <div class="flex lg:flex-col gap-2">
    
    <a 
      href={`https://twitter.com/intent/tweet?url=${shareUrl}&text=${text}`}
      target="_blank"
      rel="noopener noreferrer"
      class="btn btn-sm btn-ghost btn-square"
      aria-label="Share on X"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
    </a>

    <a 
      href={`https://www.linkedin.com/shareArticle?mini=true&url=${shareUrl}&title=${text}&summary=${summary}`}
      target="_blank"
      rel="noopener noreferrer"
      class="btn btn-sm btn-ghost btn-square"
      aria-label="Share on LinkedIn"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 21.227.792 22 1.771 22h20.451C23.2 22 24 21.227 24 20.542V1.729C24 .774 23.2 0 22.225 0z"/></svg>
    </a>

    <a 
      href={`https://reddit.com/submit?url=${shareUrl}&title=${text}`}
      target="_blank"
      rel="noopener noreferrer"
      class="btn btn-sm btn-ghost btn-square"
      aria-label="Share on Reddit"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M17 13c-1.5 0-3-1.5-3-3 0 1.5-1.5 3-3 3-1.5 0-3-1.5-3-3 0 1.5-1.5 3-3 3-1.5 0-3-1.5-3-3"/></svg>
    </a>

  </div>
</div>
