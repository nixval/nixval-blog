---
import ThemeController from './ThemeController.astro';
import SearchModal from '../../components/Search/SearchModal.astro'; // Import the new modal

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
];
---

<header class="sticky top-0 z-30 w-full p-4">
  <div class="navbar bg-base-100/80 backdrop-blur-md rounded-box shadow-lg border border-base-content/5">
    
    <div class="navbar-start">
      {/* ... (Mobile Menu Logic - Same as before) ... */}
      <a href="/" class="btn btn-ghost text-xl font-bold">AstroDaisy</a>
    </div>

    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1">
        {navLinks.map((link) => (
          <li><a href={link.href} class="font-medium hover:text-primary">{link.label}</a></li>
        ))}
      </ul>
    </div>

    <div class="navbar-end gap-2">
      <button 
        class="btn btn-ghost btn-circle" 
        aria-label="Search"
        onclick="document.getElementById('search_modal').showModal()"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </button>

      <ThemeController />
    </div>
  </div>

  <SearchModal />
</header>
